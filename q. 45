/******************************************************************************
45. Escreva um programa que leia 5 números, e imprima a média entre eles
*******************************************************************************/
#include <stdio.h>

void main()
{
    int icont;
    float num=0, soma=0, media;
    
    for (icont=1; icont<=5; icont++){
        printf("insira um numero: ");
        scanf("%f", &num);
        soma=soma+num;
    }
    media=soma/5;
    printf("a media é igual a: %f", media);
}   
